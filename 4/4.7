public class House {
    private Apartment [][] apartments;

    public House(Apartment [][] apartments)
    {
        this.apartments=apartments;
        int size=0;
        for (int i=0;i<apartments.length;i++)
            for (int j=0;j<apartments[i].length;j++)
            {
                size++;
                apartments[i][j].setNomer(size);
            }
    }

    public String getHouseInfo()
    {
        int size=0;
        for (int i=0;i<apartments.length;i++)
            for (int j=0;j<apartments[i].length;j++)
            {
                size+=apartments[i][j].getSize();
            }
        return "Дом с площадью: "+size;
    }

    public int getFloorSize(int floor)
    {
        int size=0;
        for(int i=0;i<apartments[floor-1].length;i++)
        {
            size+=apartments[floor-1][i].getSize();
        }
        return size;
    }

    public int getApartmentSize(int nomer)
    {
        for (Apartment a[]:apartments)
            for (Apartment p:a)
                if (p.getNomer()==nomer)
                    return p.getSize();
                return 0;
    }

    public int[] getApartmentNumber(int floor)
    {
        int[] numbers = new int [apartments[floor-1].length];
        for (int i=0;i<apartments[floor-1].length;i++)
            numbers[i]=apartments[floor-1][i].getNomer();
        return numbers;
    }
}



public class Apartment {
    private int nomer;
    private int size;

    Apartment (int size)
    {
        this.size=size;
    }

    public void setNomer(int nomer) {
        this.nomer = nomer;
    }

    public int getNomer() {
        return nomer;
    }

    public int getSize() {
        return size;
    }
}
