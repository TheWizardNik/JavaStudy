public class Main {

    public static void main(String[] args) {
           Student student1 =new Student("Иван");
           Student student2 = new Student("Борис");

           student1.setMarks("Математика",3);
           student1.setMarks("Физика",5);
           student2.setMarks("Математика",5);
           student2.setMarks("Информатика",5);
           student2.setMarks("Физкультура",5);

           System.out.println(student1.getInfo());
           System.out.println(student2.getInfo());

           System.out.println(student1.getName()+" Средняя оценка:"+student1.getAverageMark());
