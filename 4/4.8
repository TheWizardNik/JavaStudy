           student1.checkStudent();
           student2.checkStudent();
        }
}




import java.util.Arrays;
import java.util.HashMap;
import java.util.Map;

public class Student {
    private String name;
    Map<String,Integer> marks=new HashMap<String,Integer>();

    public Student (String name)
    {
        this.name = name;
    }

    public String getName() {
        return name;
    }

    public void setMarks(String subject, int mark) {
        marks.put(subject,mark);
    }

    public String getInfo()
    {
        String str=name+"\n";
        for (Map.Entry<String,Integer> entry : marks.entrySet()) {
            str+=  "Предмет: " + entry.getKey() + " Оценка: " + entry.getValue()+"\n";
        }
        return str;
    }

    public int getAverageMark()
    {
        float average=0;
        int count=0;
        for (Map.Entry<String,Integer> entry : marks.entrySet()) {
            average+=entry.getValue();
            count++;
        }
        average/=count;
        return Math.round(average);
    }

    public void checkStudent()
    {
        int count=0;
        for (Map.Entry<String,Integer> entry : marks.entrySet()) {
            if(entry.getValue()!=5)
            count++;
        }
        if (count==0) System.out.println(name+"- отличник");
        else System.out.println(name+" - не отличник");
    }

}
