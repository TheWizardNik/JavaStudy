public class Singer {
    private String name;
    private String song;

    public Singer(String name)
    {
        if (name==""||name==null) name="Вася";
        this.name=name;
    }

    public Singer(String name,String song)
    {
        this(name);
        this.song=song;
    }

    public String getName() {
        return name;
    }

    public void setSong(String song) {
        this.song = song;
    }

    public void singSong()
    {
        System.out.println(name+": "+song);
    }
}
