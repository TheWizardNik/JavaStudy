public class Track { 
private String name; 
private String author; 
private Album album; 

public Track(String name,String author,Album album) 
{ 
this.name=name; 
this.author=author; 
this.album=album; 
} 

public Track(String name,Album album) 
{ 
this.name=name; 
this.album=album; 
} 

public Track(String name,String author) 
{ 
this.name = name; 
this.author = author; 
} 

public void setAlbum(Album album) { 
this.album = album; 
} 

public String getFullInfo() 
{ 
if (author!=null) 
{ 
return name+" Авторы:"+author+","+album.getAuthor(); 
} 
else return name+" Автор:"+album.getAuthor(); 
} 
} 



