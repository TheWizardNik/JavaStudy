public class Main {

    public static void main(String[] args) {
        Student s1 = new Student("Вася");
        Student s2 = new Student("Петя");

        s1.setMarks(new String[][]{{"Информатика","5"}, {"Математика","4"},{"Физика","5"}});

        System.out.println(s1.getInfo());

        s1.setMark(new String[] {"Английский язык","4"},2);

        System.out.println(s1.getInfo());

        s2.trueCopyMarks(s1);

        System.out.println(s2.getInfo());

        s2.setOnlyMark("5",1);

        System.out.println(s1.getInfo());
        System.out.println(s2.getInfo());
    }
}


import java.util.Arrays;

public class Student {
    private String name;
    private String [][] marks;

    public Student (String name)
    {
        this.name = name;
    }

    public void setMarks(String[][] marks) {
        this.marks = marks;
    }

    public String getInfo()
    {
        String str=name+":\n";

        for (String m[]:marks) {
            for (String a : m)
                str += a + " ";
            str += "\n";
        }

        return str;
    }

    public void setMark(String[] marks,int index)
    {
        this.marks[index]=marks;
    }

    public void setOnlyMark(String marks,int index)
    {
        this.marks[index][1]=marks;
    }

    public void trueCopyMarks(Student one)
    {
        this.marks = Arrays.copyOf(one.marks,one.marks.length);
        for (int i=0;i<one.marks.length;i++)
        this.marks[i] = Arrays.copyOf(one.marks[i],one.marks[i].length);
    }
}
