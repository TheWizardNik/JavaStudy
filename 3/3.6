package com.company;

import java.util.HashMap;
import java.util.Map;

class City {
    String name;
    Map<City,Integer> map=new HashMap<City,Integer>();

    public City(String name)
    {
        this.name=name;
    }

    public void setMap(City city,int cost)
    {
        this.map.put(city,cost);
    }

    public String getName() {
        return name;
    }

    public String getWays()
    {
        String str=name+"\n";
        for (Map.Entry<City,Integer> entry : map.entrySet()) {
            str+=  "Город: " + entry.getKey().getName() + " Стоимость: " + entry.getValue()+"\n";
        }
        return str;
    }
}
