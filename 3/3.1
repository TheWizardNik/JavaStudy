public class Human2 {
    private String [] name;
    private String thurname;
    private Human2 father;

    public Human2 (String name, String thurname, Human2 father)
    {
        this.name=name.split(" ");
        this.thurname = thurname;
        this.father=father;
    }

    public Human2 (String name, String thurname)
    {
        this.name = name.split(" ");
        this.thurname=thurname;
    }

    public String  getName ()
    {
        return name[0];
    }

    public String getFIO()
    {
        String str=thurname+" ";

        for(String n:name)
        {
            str+=n+" ";
        }

        if (father!=null)
        return str+=father.getName()+"ович";
        else return str;
    }


}
