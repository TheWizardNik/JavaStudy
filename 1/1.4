public class Human 
{ 
private String name; 
private String fatherName; 
private String thurName; 

public static class Builder 
{ 
private String name; //Обязательный 

private String fatherName=""; 
private String thurName=""; 

public Builder (String name) 
{ 
this.name = name; 
} 

public Builder thurName (String thurName) 
{ 
this.thurName=thurName; 
return this; 
} 

public Builder fatherName (String fatherName) 
{ 
this.fatherName=fatherName; 
return this; 
} 

public Human build () 
{ 
return new Human (this); 
} 
} 

private Human(Builder builder) 
{ 
name = builder.name; 
thurName = builder.thurName; 
fatherName = builder.fatherName; 
} 

public String getFIO() { 
return thurName+" "+name+" "+fatherName; 
} 

}
